<div class="container mt-3">

  <!-- Console variables with photos -->
  <div class="main">
    <div class="console">
      <div class="title">
        <h1><%= @console.name %></h1>
      </div>
      <div class="pictures">
        <%= cl_image_tag @console.photos[0].key, class:"picture-1" %>
        <%= cl_image_tag @console.photos[1].key, class:"picture-2" %>
        <%= cl_image_tag @console.photos[2].key, class:"picture-3" %>
      </div>
      <div class="main">
        <div class="content">
          <h3><%= @console.model %></h3>
          <p><%= @console.content %></p>
        </div>
      </div>

      <!-- Buttons -->
      <%= link_to consoles_path do%>
        <button class="glow-on-hover" type="button">Back to all consols</button>
      <%end%>
    </div>
      <%= link_to new_console_booking_path(@console) do%>
        <button class="glow-on-hover" type="button">Book this console</button>
      <%end%>
      <!-- Link to book the console ? -->
    <div class="booking">
      <div class="form">
        <%= simple_form_for([@console, @booking]) do |f| %>
        <%= f.input :starting_date,  as: :string, input_html: {class: "datepicker"} %>
        <%= f.input :ending_date,  as: :string, input_html: {class: "datepicker"} %>
        <%= f.submit "Create a booking" %>
      <% end %>
      </div>
    </div>
  </div>
</div>
